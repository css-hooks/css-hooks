{
  "name": "@hooks.css/solid",
  "description": "CSS Hooks for Solid",
  "version": "0.4.1",
  "author": "Nick Saunders",
  "dependencies": {
    "@hooks.css/core": "^0.4.1"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.3",
    "@tsconfig/strictest": "^2.0.1",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "rimraf": "^5.0.1",
    "solid-js": "^1.7.11",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "files": [
    "cjs",
    "esm",
    "types"
  ],
  "license": "MIT",
  "main": "cjs",
  "module": "esm",
  "peerDependencies": {
    "hooks.css": "^0.4.1",
    "solid-js": ">=1.0.0 <2.0.0"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/css-hooks/css-hooks.git",
    "directory": "packages/solid"
  },
  "scripts": {
    "clean": "rimraf cjs esm types",
    "lint": "eslint __tests__ src .*.*js *.*js",
    "postversion": "npm install @hooks.css/core@^$npm_package_version --force && npm install --save-peer hooks.css@^$npm_package_version --force",
    "prepublishOnly": "tsc -p tsconfig.dist.json --outDir cjs --module commonjs && tsc -p tsconfig.dist.json --outDir esm --module es6 && tsc -p tsconfig.dist.json --declaration --emitDeclarationOnly --outDir types",
    "test": "jest"
  },
  "type": "module",
  "types": "types"
}
