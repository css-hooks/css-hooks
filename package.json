{
  "name": "css-hooks",
  "description": "Monorepo for @css-hooks/* packages",
  "version": "1.8.2",
  "scripts": {
    "docs": "npm run api --workspaces --if-present && api-documenter markdown -i temp -o docs/api",
    "prepare": "npm run prepublishOnly --workspace=packages"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.23.20",
    "conventional-changelog-cli": "^3.0.0",
    "conventional-github-releaser": "^3.1.5",
    "conventional-recommended-bump": "^7.0.1"
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/css-hooks/css-hooks.git"
  },
  "workspaces": [
    "packages/recommended",
    "packages/core",
    "packages/preact",
    "packages/qwik",
    "packages/react",
    "packages/solid",
    "site",
    "examples/*"
  ]
}
